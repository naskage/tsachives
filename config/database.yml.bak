default: &default
  adapter: postgresql
  encoding: unicode
  pool: 32

development:
  <<: *default
  host: <%= ENV['PG_HOST'] %>
  database: tsarchives
  username: postgres
  password: <%= ENV['PG_PASSWORD'] %>

test:
  <<: *default
  database: tsarchives_test

production:
  <<: *default
  host: <%= ENV['PG_HOST'] %>
  database: tsarchives 
  username: postgres
  password: <%= ENV['PG_PASSWORD'] %>
